                +select(data, '#duong' ,'Hình thức', '--post-slc')
                input#duong(type="text" hidden)
    .form-group
        .row.align-items-center
            .col-md-6
                label(for="price") Giá
                input#price.form-control(type="number")
            .col-md-6.--post_price
                label Tổng tiền
                    strong.text-danger.ml-3 0đ
    .form-group
        label(for="address") Địa chỉ
        input#address.form-control(type="text")
