include ./select
mixin formbasic
    .form-group
        label(for="title") Tiêu Đề
        input#title.form-control(type="text")
    .form-group
        .row.align-items-center
            .col-md-6
                label(for="type") Hình Thức
                - var data = [{id: 1, name: 'Hình thức 1'},{id: 2, name: 'Hình thức 2'},{id: 3, name: 'Hình thức 3'}, {id: 4, name: 'Hình thức 4'}, {id: 5, name: 'Hình thức 5'}]
                +select(data, '#type' ,'Hình thức', '--post-slc')
                input#type(type="text" hidden)
            .col-md-6
                label(for="cate") Loại
                - var data = [{id: 1, name: 'asc 1'},{id: 2, name: 'Hình thức 2'},{id: 3, name: 'Hình thức 3'}, {id: 4, name: 'Hình thức 4'}, {id: 5, name: 'Hình thức 5'}]
